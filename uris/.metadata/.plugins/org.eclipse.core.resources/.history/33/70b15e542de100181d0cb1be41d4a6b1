package br.ime.uris.dao.imp;

import java.util.ArrayList;
import java.util.List;

import org.springframework.beans.BeanUtils;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import br.ime.uris.dao.NoticiaDao;
import br.ime.uris.util.dto.SiteDto;


@Component
public class NoticiaDaoImp  implements NoticiaDao{

	@Autowired
	private SiteRepository siteRepository;
	
	@Override
	public List<SiteDto> listNoticia() {
		
		List<Site> lNoticia = siteRepository.getSite(0);
		
		List<SiteDto> lNoticiaDto = new ArrayList<>();
		
		for (Noticia noticia: lNoticia){
			
			SiteDto noticiaDto = new SiteDto();
			
			BeanUtils.copyProperties(noticia, noticiaDto);
			
			lNoticiaDto.add(noticiaDto);
		}
		
		return lNoticiaDto;
		
	}

}
